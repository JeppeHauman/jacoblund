<header class="h-16 border-b flex items-center px-3 justify-center">
  <a class="text-xl sm:text-2xl effect-3 home" href="/">Jacoblund</a>
</header>

<style>
  .home {
    position: relative;
    color: inherit;
    &::before,
    &::after {
      content: "";
      position: absolute;
      transition: transform 0.5s ease;
    }
  }

  .effect-3 {
    display: inline-block;
    padding-top: 10px;
    padding-bottom: 5px;
    overflow: hidden;
    &::before {
      left: 0;
      bottom: 0;
      width: 100%;
      height: 2px;
      background: black;
      transform: translateX(-100%);
    }
    &:hover::before {
      transform: translateX(0);
    }
  }
</style>
