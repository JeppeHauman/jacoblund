---
const year = new Date().getFullYear();
---

<footer class="border-t py-10">
  <div
    class="flex flex-col gap-5 md:flex-row px-10 justify-between items-center max-w-4xl mx-auto"
  >
    <ul>
      <li><a class="hover:underline" href="/contact">Kontakt</a></li>
    </ul>
    <p>&copy; Jacoblund <span id="year">{year}</span></p>
  </div>
</footer>

<script>
  const yearSpan = document.getElementById("year");
  const currentYear = new Date().getFullYear();
  if (yearSpan?.innerHTML !== currentYear.toString() && yearSpan) {
    yearSpan.innerHTML = currentYear.toString();
  }
</script>
