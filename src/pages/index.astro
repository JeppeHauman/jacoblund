---
import MainLayout from "../layouts/MainLayout.astro";
import { Image } from "astro:assets";
import location1MainImage from "../images/location-1/location-1-main-image.jpg";
---

<MainLayout>
  <main class="min-h-[calc(100vh-64px)] flex flex-col">
    <div
      class="grid grid-cols-2 gap-5 container mx-auto place-items-center grow"
    >
      <div class="max-w-lg group">
        <h3
          class="text-center text-3xl translate-y-full group-hover:-translate-y-0 transition-all"
        >
          Addresse 123
        </h3>
        <div
          class="relative overflow-hidden group group-hover:rounded-lg transition-all"
        >
          <Image
            class="overlay group-hover:scale-105 transition-all"
            src={location1MainImage}
            alt={"a building in Copenhagen"}
          />
          <div
            class="absolute w-full h-full transition-all group-hover:bg-[rgba(0,0,0,0.6)] top-0 left-0 flex justify-center items-center"
          >
            <a
              href="#"
              class="text-white text-lg border rounded-md px-2 py-1 opacity-0 group-hover:opacity-100 transition-all duration-500"
              >Se mere</a
            >
          </div>
        </div>
      </div>
      <div class="max-w-lg">
        <h3 class="text-center font-bold text-3xl">Addresse 321</h3>
        <Image src={location1MainImage} alt={"a building in Copenhagen"} />
      </div>
    </div>
  </main>
</MainLayout>

<style>
  .overlay {
    border-image: fill 1 rgba(0, 0, 0, 0.5);
  }
</style>
